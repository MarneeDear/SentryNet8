@model Sentry.WebApp.ViewModels.OfficeLocationCompareViewModel

<!-- Modal - Compare Record -->
<div class="modal-header">
    <h3 class="modal-title" id="officeLocationMatchCompareModalLabel">Compare Records:</h3>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close" data-toggle="tooltip" title="Close"><i aria-hidden="true" class="ua-brand-x"></i></button>
</div>
<div class="modal-body">
    <div class="panel-toolbar">
        <span class="integrationDate"><strong>Integration Date:</strong>&nbsp;@Html.DisplayFor(m => m.IntegrationDate)</span>
        <span class="sourceSystem"><strong>Source System:</strong>&nbsp;@Html.DisplayFor(m => m.System)</span>
    </div>
    <div class="row matching">
        <div class="col-sm-12 col-md-6">
            <h5><strong>System Record Id:</strong>&nbsp;@Html.DisplayFor(m => m.SourceRecordId)</h5>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Integration Record</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>Name:</dt>
                        <dd>@Html.DisplayFor(m => m.Name)</dd>
                        <dt>Building Code:</dt>
                        <dd>@Html.DisplayFor(m => m.BuildingCode)</dd>
                        <dt>Address 1:</dt>
                        <dd>@Html.DisplayFor(m => m.Address1)</dd>
                        <dt>Address 2:</dt>
                        <dd>@Html.DisplayFor(m => m.Address2)</dd>
                        <dt>City:</dt>
                        <dd>@Html.DisplayFor(m => m.City)</dd>
                        <dt>State:</dt>
                        <dd>@Html.DisplayFor(m => m.State)</dd>
                        <dt>Postal Code:</dt>
                        <dd>@Html.DisplayFor(m => m.PostalCode)</dd>
                        <dt>Country:</dt>
                        <dd>@Html.DisplayFor(m => m.Country)</dd>
                    </dl>
                </div>
            </div><!-- /.panel-* -->
        </div><!-- /.col-* -->
        <div class="col-sm-12 col-md-6">
            <h5><strong>System Record Id:</strong>&nbsp;</h5>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Compare Record</h3>
                </div>
                <div class="panel-body">
                    Panel content
                </div>
                <div class="panel-footer">
                    <button type="button" class="btn btn-link no-match text-left" data-dismiss="modal" data-toggle="tooltip" title="Not a Match"><i class="fas fa-times">&nbsp;</i> Not a Match</button>
                    <button type="button" class="btn btn-success match pull-right" data-dismiss="modal" data-toggle="tooltip" title="Match this Record"><i class="fas fa-check">&nbsp;</i> Match!</button>
                </div>
            </div><!-- /.panel-* -->
        </div><!-- /.col-* -->
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-link pull-left" data-dismiss="modal" data-toggle="tooltip" title="Cancel"><i class="fas fa-times">&nbsp;</i> Cancel</button>
    @*<button type="button" class="btn btn-primary pull-right" data-dismiss="modal" data-toggle="tooltip" title="Close"><i class="fas fa-times">&nbsp;</i> Close</button>*@
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {

            // Tooltip Titles
            //----------------------
            $(".ellipsis[title]").each(function (i, obj) {

                $(this).tooltip({
                    title: $(this).attr("tooltip-title")
                    , container: 'body'
                    , placement: 'top'
                    , trigger: 'hover'
                });

                $('body').on('hidden.bs.tooltip', function () {
                    var tooltips = $('.tooltip').not('.in');
                    if (tooltips) {
                        tooltips.remove();
                    }
                });

            });

        });
    </script>
}
