<!-- Please Wait Modal -->
<div class="modal fade" id="pleaseWaitModal" 
     tabindex="-1" 
     role="dialog" 
     aria-labelledby="pleaseWaitModalLabel" 
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="pleaseWaitModalLabel">Please Wait</h5>
            </div>
            <div class="modal-body">
                <p><span id="pleaseWaitMessage" 
                         style="color:firebrick;">Please wait while the page loads.</span></p>
            </div>            
        </div>
    </div>
</div>
